{
  "$schema": "https://opencode.ai/config.json",
  "theme": "synthwave84",
  "model": "github-copilot/claude-sonnet-4.5",
  "autoupdate": true,
  "permission": {
    "bash": {
      "rg": "allow",
      "grep": "allow",
      "ls": "allow",
      "pwd": "allow",
      "cat": "allow",
      "head": "allow",
      "find": "allow",
      "cd": "allow",
      "npm": "allow",
      "yarn": "allow",
      "tail": "allow",
      "pytest": "allow"
    }
  },
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "{env:CONTEXT7_API_KEY}"
      },
      "enabled": true
    },
    "playwright": {
      "type": "local",
      "command": [
        "node",
        "{env:HOME}/.config/opencode/node_modules/@playwright/mcp/cli.js"
      ],
      "enabled": true
    }
  }
}
